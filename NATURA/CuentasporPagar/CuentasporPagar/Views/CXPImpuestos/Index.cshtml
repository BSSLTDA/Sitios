@using CuentasporPagar.Models.EF;

@{
    ViewBag.Title = "Impuestos";
}

<h2>@ViewBag.Title</h2>

<div style="max-width:500px;">
    @(Html.EJ().Grid<CxPImpuestos>("Grid")
                                                                        .Datasource(ds => ds.URL(@Url.Content("~/CXPImpuestos/DSImpuestos")).Adaptor(AdaptorType.UrlAdaptor))
                                                                        .EnableAltRow()
                                                                        .MinWidth(120)
                                                                        .AllowScrolling()
                                                                        .IsResponsive(true)
                                                                        .EnableResponsiveRow(true)
                                                                        .ScrollSettings(col => { col.Width("100%").Height("auto"); })
                                                                        .ToolbarSettings(toolBar =>
                                                                            toolBar.ShowToolbar()
                                                                            .CustomToolbarItems(new List<object>() {
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Agregar" },
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Editar" },
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Eliminar" }
                                                                            })
                                                                            .ToolbarItems(items =>
                                                                            {
                                                                            }))
                                                                        .Locale("es-CO")
                                                                        .PageSettings(p => { p.PageCount(7).PageSize(25); })
                                                                        .AllowPaging()
                                                                        .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
                                                                        .AllowFiltering()
                                                                        .AllowSorting()
                                                                        .Columns(col =>
                                                                        {
                                                                            col.Width(100).Field("CodigoConcepto").HeaderText("Cód. Concepto").HeaderTextAlign(TextAlign.Center).Add();
                                                                            col.Width(100).Field("CodigoRegimen").HeaderText("Cód. Régimen").HeaderTextAlign(TextAlign.Center).Add();
                                                                            col.Width(100).Field("CodigoTasa").HeaderText("Cód. Tasa").HeaderTextAlign(TextAlign.Center).Add();
                                                                            col.Field("IdCxPImpuestos").Visible(false).Add();
                                                                        })
                                                                        .ClientSideEvents(eve => eve.Create("Create").ToolbarClick("TBClick"))
    )
    <script type="text/x-jsrender" id="Agregar">
        <a id="aCustomLib" class="iconCus">
            <img width="14" src='@Url.Content("~/Content/img/add.svg")' />
        </a>
    </script>
    <script type="text/x-jsrender" id="Editar">
        <a id="aCustomLib" class="iconCus">
            <img width="16" src='@Url.Content("~/Content/img/edit.svg")' />
        </a>
    </script>
    <script type="text/x-jsrender" id="Eliminar">
        <a id="aCustomLib" class="iconCus">
            <img width="14" src='@Url.Content("~/Content/img/delete.svg")' />
        </a>
    </script>
</div>

<div class="alineadoCentro">
    <div id="myModal" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Agregar Impuesto</h4>
                </div>
                <div class="modal-body">
                    <table width="100%">
                        <tr>
                            <td>
                                <label>Código Concepto</label>
                            </td>
                            <td>
                                <input id="nConceptoId" type="hidden" />
                                <input id="nCodigoConcepto" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Código Régimen</label>
                            </td>
                            <td>
                                <input id="nRegimenId" type="hidden" />
                                <input id="nCodigoRegimen" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Código Tasa</label>
                            </td>
                            <td>
                                <input id="nTasaId" type="hidden" />
                                <input id="nCodigoTasa" class="ctext" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Save()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal2" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal2" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Editar Impuesto</h4>
                </div>
                <div class="modal-body">
                    <table width="100%">
                        <tr>
                            <td>
                                <label>Código Concepto</label>
                            </td>
                            <td>
                                <input id="uConceptoId" type="hidden" />
                                <input id="uCodigoConcepto" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Código Régimen</label>
                            </td>
                            <td>
                                <input id="uRegimenId" type="hidden" />
                                <input id="uCodigoRegimen" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Código Tasa</label>
                            </td>
                            <td>
                                <input id="uTasaId" type="hidden" />
                                <input id="uCodigoTasa" class="ctext" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Update()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal2" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal3" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal3" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Eliminar Impuesto</h4>
                </div>
                <div class="modal-body">
                    Esta seguro de eliminar el registro seleccionado
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Delete()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal3" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var Carga = 0;
    var urlNuevo = '@Url.Content("~/CXPImpuestos/Nuevo")';
    var urlEdita = '@Url.Content("~/CXPImpuestos/Editar")';
    var urlElimina = '@Url.Content("~/CXPImpuestos/Eliminar")';
    var idCC = "";

    function TBClick(args) {
        if (args.itemIndex == "0" && args.itemName == "Agregar") {
            $("#nCodigoConcepto").val('');
            $("#nCodigoRegimen").val('');
            $("#nCodigoTasa").val('');
            $("#myModal").css("display", "block");
        }
        if (args.itemIndex == "1" && args.itemName == "Editar") {
            if (args.model.selectedRowIndex != "-1") {
                $("#uCodigoConcepto").val(args.model.selectedRecords[0].CodigoConcepto);
                $("#uCodigoRegimen").val(args.model.selectedRecords[0].CodigoRegimen);
                $("#uCodigoTasa").val(args.model.selectedRecords[0].CodigoTasa);
                idCC = args.model.selectedRecords[0].IdCxPImpuestos;
                $("#myModal2").css("display", "block");
            } else {
                $("#LblMsg").text("No se ha seleccionado ningún registro");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }
        if (args.itemIndex == "2" && args.itemName == "Eliminar") {
            if (args.model.selectedRowIndex != "-1") {
                idCC = args.model.selectedRecords[0].IdCxPImpuestos;
                $("#myModal3").css("display", "block");
            }
            else {
                $("#LblMsg").text("No se ha seleccionado ningún registro");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }
    }

    function Save() {
        var continuar = true;

        if ($("#nCodigoConcepto").val() == "") {
            continuar = false;
            $("#LblMsg").text("El campo 'Cód. Concpeto' es obligatorio");
            $("#myModMsg").css("display", "block");
            $("#myModMsg").css("z-index", "999");
        }

        if (continuar) {
            if ($("#nCodigoRegimen").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Cód. Régimen' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#nCodigoTasa").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Cód. Tasa' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            $.ajax({
                type: "POST",
                url: urlNuevo,
                data: { ConceptoId: $("#nConceptoId").val(), RegimenId: $("#nRegimenId").val(), TasaId: $("#nTasaId").val() },
                cache: true,
                dataType: 'json',
                success: function (result) {
                    if (result.result == "OK") {
                        gridObj = $("#Grid").data("ejGrid");
                        gridObj.refreshContent();
                        $("#myModal").css("display", "none");
                    } else {
                        $("#LblMsg").text(result.result);
                        $("#myModMsg").css("display", "block");
                    }
                }
            });
        }
    }

    function Update() {
        var continuar = true;

        if ($("#uCodigoConcepto").val() == "") {
            continuar = false;
            $("#LblMsg").text("El campo 'Cód. Concepto' es obligatorio");
            $("#myModMsg").css("display", "block");
            $("#myModMsg").css("z-index", "999");
        }

        if (continuar) {
            if ($("#uCodigoRegimen").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Cód. Régimen' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#uCodigoTasa").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Cód. Tasa' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }
        
        if (continuar) {
            $.ajax({
                type: "POST",
                url: urlEdita,
                data: { IdCxPImpuetos: idCC, ConceptoId: $("#uConceptoId").val(), RegimenId: $("#uRegimenId").val(), TasaId: $("#uTasaId").val() },
                cache: true,
                dataType: 'json',
                success: function (result) {
                    if (result.result == "OK") {
                        gridObj = $("#Grid").data("ejGrid");
                        gridObj.refreshContent();
                        $("#myModal2").css("display", "none");
                    } else {
                        $("#LblMsg").text(result.result);
                        $("#myModMsg").css("display", "block");
                    }
                }
            });
        }
    }

    function Delete() {
        $.ajax({
            type: "POST",
            url: urlElimina,
            data: { Id: idCC },
            cache: true,
            dataType: 'json',
            success: function (result) {
                if (result.result == "OK") {
                    gridObj = $("#Grid").data("ejGrid");
                    gridObj.refreshContent();
                    $("#myModal3").css("display", "none");
                } else {
                    $("#LblMsg").text(result.result);
                    $("#myModMsg").css("display", "block");
                }
            }
        });
    }
</script>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>

<script>
    $("#myModal").draggable({
        handle: ".modal-header"
    });
    $("#cerrarModal").click(function () {
        $("#myModal").css("display", "none");
    });
    $("#cancelModal").click(function () {
        $("#myModal").css("display", "none");
    });

    $("#myModal2").draggable({
        handle: ".modal-header"
    });
    $("#cerrarModal2").click(function () {
        $("#myModal2").css("display", "none");
    });
    $("#cancelModal2").click(function () {
        $("#myModal2").css("display", "none");
    });

    $("#myModal3").draggable({
        handle: ".modal-header"
    });
    $("#cerrarModal3").click(function () {
        $("#myModal3").css("display", "none");
    });
    $("#cancelModal3").click(function () {
        $("#myModal3").css("display", "none");
    });

    var ConceptoComplete = '@Url.Content("~/CXPImpuestos/ConceptoComplete")';
    var RegimenComplete = '@Url.Content("~/CXPImpuestos/RegimenComplete")';
    var TasaComplete = '@Url.Content("~/CXPImpuestos/TasaComplete")';

    $(document).ready(function () {
        $("input:text").focus(function () { $(this).select(); });
        $("#nCodigoConcepto").autocomplete({
            source: function (request, response) {
                $("#nConceptpId").val('');
                $.ajax({
                    url: ConceptoComplete,
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Codigo + ' - ' + item.Descripcion, id: item.IdCxPConcepto };
                        }))
                    }
                })
            },
            focus: function (event, ui) {
                $("#nCodigoConcepto").val(ui.item.label);
                return false;
            },
            select: function (event, ui) {
                $("#nConceptoId").val(ui.item.id);
                $("#nCodigoConcepto").val(ui.item.label);
                return false;
            },
            change: function (event, ui) {
                if ($("#nConceptoId").val() == "") {
                    $("#nCodigoConcepto").val('');
                }
                return false;
            }
        });
        $("#nCodigoRegimen").autocomplete({
            source: function (request, response) {
