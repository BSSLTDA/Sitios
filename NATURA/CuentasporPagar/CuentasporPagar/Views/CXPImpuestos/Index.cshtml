                        response($.map(data, function (item) {
                            return { label: item.Codigo + ' - ' + item.Descripcion, id: item.IdCxPRegimen };
                        }))
                    }
                })
            },
            focus: function (event, ui) {
                $("#nCodigoRegimen").val(ui.item.label);
                return false;
            },
            select: function (event, ui) {
                $("#nRegimenId").val(ui.item.id);
                $("#nCodigoRegimen").val(ui.item.label);
                return false;
            },
            change: function (event, ui) {
                if ($("#nRegimenId").val() == "") {
                    $("#nCodigoRegimen").val('');
                }
                return false;
            }
        });
        $("#nCodigoTasa").autocomplete({
            source: function (request, response) {
                $("#nTasaId").val('');
                $.ajax({
                    url: TasaComplete,
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.Codigo + ' - ' + item.Concepto, id: item.IdCxPTasas };
                        }))
                    }
                })
            },
            focus: function (event, ui) {
                $("#nCodigoTasa").val(ui.item.label);
                return false;
            },
            select: function (event, ui) {
                $("#nTasaId").val(ui.item.id);
                $("#nCodigoTasa").val(ui.item.label);
                return false;
            },
            change: function (event, ui) {
                if ($("#nTasaId").val() == "") {
                    $("#nCodigoTasa").val('');
                }
                return false;
            }
        });
    })
