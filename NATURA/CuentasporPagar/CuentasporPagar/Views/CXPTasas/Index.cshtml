@using CuentasporPagar.Models.EF;

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<div style="max-width:800px;">
    @(Html.EJ().Grid<CxPTasas>("Grid")
                                                                .Datasource(ds => ds.URL(@Url.Content("~/CXPTasas/DSTasas")).Adaptor(AdaptorType.UrlAdaptor))
                                                                .EnableAltRow()
                                                                .MinWidth(120)
                                                                .AllowScrolling()
                                                                .IsResponsive(true)
                                                                .EnableResponsiveRow(true)
                                                                .ScrollSettings(col => { col.Width("100%").Height("auto"); })
                                                                .ToolbarSettings(toolBar =>
                                                                    toolBar.ShowToolbar()
                                                                    .CustomToolbarItems(new List<object>() {
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Agregar" },
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Editar" },
new Syncfusion.JavaScript.Models.CustomToolbarItem() { TemplateID = "#Eliminar" }
                                                                    })
                                                                    .ToolbarItems(items =>
                                                                    {
                                                                    }))
                                                                .Locale("es-CO")
                                                                .PageSettings(p => { p.PageCount(7).PageSize(25); })
                                                                .AllowPaging()
                                                                .FilterSettings(filter => { filter.FilterType(FilterType.Excel); })
                                                                .AllowFiltering()
                                                                .AllowSorting()
                                                                .Columns(col =>
                                                                {
                                                                    col.Width(100).Field("Codigo").HeaderText("Código").HeaderTextAlign(TextAlign.Center).Add();
                                                                    col.Width(280).Field("Concepto").HeaderTextAlign(TextAlign.Center).Add();
                                                                    col.Width(80).Field("Tasa").HeaderTextAlign(TextAlign.Center).Add();
                                                                    col.Width(80).Field("Divisor").HeaderTextAlign(TextAlign.Center).Add();
                                                                    col.Width(80).Field("Factor").HeaderTextAlign(TextAlign.Center).Add();
                                                                    col.Field("IdCxPTasas").Visible(false).Add();
                                                                })
                                                                .ClientSideEvents(eve => eve.Create("Create").ToolbarClick("TBClick"))
    )
    <script type="text/x-jsrender" id="Agregar">
        <a id="aCustomLib" class="iconCus">
            <img width="14" src='@Url.Content("~/Content/img/add.svg")' />
        </a>
    </script>
    <script type="text/x-jsrender" id="Editar">
        <a id="aCustomLib" class="iconCus">
            <img width="16" src='@Url.Content("~/Content/img/edit.svg")' />
        </a>
    </script>
    <script type="text/x-jsrender" id="Eliminar">
        <a id="aCustomLib" class="iconCus">
            <img width="14" src='@Url.Content("~/Content/img/delete.svg")' />
        </a>
    </script>
</div>

<div class="alineadoCentro">
    <div id="myModal" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Agregar Tasa</h4>
                </div>
                <div class="modal-body">
                    <table width="100%">
                        <tr>
                            <td>
                                <label>Código</label>
                            </td>
                            <td>
                                <input id="nCodigo" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Concepto</label>
                            </td>
                            <td>
                                <input id="nConcepto" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Tasa</label>
                            </td>
                            <td>
                                <input id="nTasa" class="ctext" type="number" step="any" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Divisor</label>
                            </td>
                            <td>
                                <input id="nDivisor" class="ctext" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Save()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal2" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal2" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Editar Tasa</h4>
                </div>
                <div class="modal-body">
                    <table width="100%">
                        <tr>
                            <td>
                                <label>Código</label>
                            </td>
                            <td>
                                <input id="uCodigo" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Concepto</label>
                            </td>
                            <td>
                                <input id="uConcepto" class="ctext" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Tasa</label>
                            </td>
                            <td>
                                <input id="uTasa" class="ctext" type="number" step="any"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Divisor</label>
                            </td>
                            <td>
                                <input id="uDivisor" class="ctext" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Update()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal2" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal3" class="modalu">
        <div class="fondomodal">
        </div>
        <div class="modal-dialogu">
            <div class="modal-content fondoBody">
                <div class="modal-header">
                    <button id="cerrarModal3" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Eliminar Tasa</h4>
                </div>
                <div class="modal-body">
                    Esta seguro de eliminar el registro seleccionado
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Delete()" data-dismiss="modal">Aceptar</button>
                    <button id="cancelModal3" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var Carga = 0;
    var urlNuevo = '@Url.Content("~/CXPTasas/Nuevo")';
    var urlEdita = '@Url.Content("~/CXPTasas/Editar")';
    var urlElimina = '@Url.Content("~/CXPTasas/Eliminar")';
    var idCC = "";

    function TBClick(args) {
        if (args.itemIndex == "0" && args.itemName == "Agregar") {
            $("#nCodigo").val('');
            $("#nConcepto").val('');
            $("#nTasa").val('');
            $("#nDivisor").val('');
            $("#myModal").css("display", "block");
        }
        if (args.itemIndex == "1" && args.itemName == "Editar") {
            if (args.model.selectedRowIndex != "-1") {
                $("#uCodigo").val(args.model.selectedRecords[0].Codigo);
                $("#uConcepto").val(args.model.selectedRecords[0].Concepto);
                $("#uTasa").val(args.model.selectedRecords[0].Tasa);
                $("#uDivisor").val(args.model.selectedRecords[0].Divisor);
                idCC = args.model.selectedRecords[0].IdCxPTasas;
                $("#myModal2").css("display", "block");
            } else {
                $("#LblMsg").text("No se ha seleccionado ningún registro");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }
        if (args.itemIndex == "2" && args.itemName == "Eliminar") {
            if (args.model.selectedRowIndex != "-1") {
                idCC = args.model.selectedRecords[0].IdCxPTasas;
                $("#myModal3").css("display", "block");
            }
            else {
                $("#LblMsg").text("No se ha seleccionado ningún registro");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }
    }

    function Save() {
        var continuar = true;

        if ($("#nCodigo").val() == "") {
            continuar = false;
            $("#LblMsg").text("El campo 'Código' es obligatorio");
            $("#myModMsg").css("display", "block");
            $("#myModMsg").css("z-index", "999");
        }

        if (continuar) {
            if ($("#nConcepto").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Concepto' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#nTasa").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Tasa' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#nDivisor").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Divisor' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            $.ajax({
                type: "POST",
                url: urlNuevo,
                data: { Codigo: $("#nCodigo").val(), Concepto: $("#nConcepto").val(), Tasa: $("#nTasa").val(), Divisor: $("#nDivisor").val() },
                cache: true,
                dataType: 'json',
                success: function (result) {
                    if (result.result == "OK") {
                        gridObj = $("#Grid").data("ejGrid");
                        gridObj.refreshContent();
                        $("#myModal").css("display", "none");
                    } else {
                        $("#LblMsg").text(result.result);
                        $("#myModMsg").css("display", "block");
                    }
                }
            });
        }
    }

    function Update() {
        var continuar = true;

        if ($("#uCodigo").val() == "") {
            continuar = false;
            $("#LblMsg").text("El campo 'Código' es obligatorio");
            $("#myModMsg").css("display", "block");
            $("#myModMsg").css("z-index", "999");
        }

        if (continuar) {
            if ($("#uConcepto").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Concepto' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#uTasa").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Tasa' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            if ($("#uDivisor").val() == "") {
                continuar = false;
                $("#LblMsg").text("El campo 'Divisor' es obligatorio");
                $("#myModMsg").css("display", "block");
                $("#myModMsg").css("z-index", "999");
            }
        }

        if (continuar) {
            $.ajax({
                type: "POST",
                url: urlEdita,
                data: { IdCxPTasas: idCC, Codigo: $("#uCodigo").val(), Concepto: $("#uConcepto").val(), Tasa: $("#uTasa").val(), Divisor: $("#uDivisor").val() },
                cache: true,
                dataType: 'json',
                success: function (result) {
                    if (result.result == "OK") {
                        gridObj = $("#Grid").data("ejGrid");
                        gridObj.refreshContent();
                        $("#myModal2").css("display", "none");
                    } else {
                        $("#LblMsg").text(result.result);
                        $("#myModMsg").css("display", "block");
                    }
                }
            });
        }
    }

    function Delete() {
        $.ajax({
            type: "POST",
            url: urlElimina,
            data: { Id: idCC },
            cache: true,
            dataType: 'json',
            success: function (result) {
                if (result.result == "OK") {
                    gridObj = $("#Grid").data("ejGrid");
                    gridObj.refreshContent();
                    $("#myModal3").css("display", "none");
                } else {
                    $("#LblMsg").text(result.result);
                    $("#myModMsg").css("display", "block");
                }
            }
        });
    }
</script>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>

